{
  "manifest_version": 3,
  "name": "EduCopyer LLM Assistant",
  "version": "1.0",
  "description": "集成LLM的智能文本处理Chrome扩展",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "notifications",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2canvas.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "copy-to-clipboard": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "处理并复制到剪贴板"
    },
    "simulate-input": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "处理并模拟输入"
    },
    "toggle-notifications": {
      "suggested_key": {
        "default": "Alt+Comma"
      },
      "description": "开启/关闭通知提示"
    },
    "capture-area": {
      "suggested_key": {
        "default": "Alt+Period"
      },
      "description": "框选区域并分析"
    }
  }
} 